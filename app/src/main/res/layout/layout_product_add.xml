<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gris"
    tools:context="com.appgestor.domiciliosya.Adtivities.ActProductAdd">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:id="@+id/displayImagen"
            android:layout_marginTop="25dp"
            android:src="@drawable/domidimi"
            android:contentDescription="@string/informacion"
            android:layout_gravity="center_horizontal" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dip"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Descripcion"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_negro"
                    android:layout_weight="1"
                    android:layout_margin="5dip"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:id="@+id/precio"
                    android:textStyle="bold"
                    android:textColor="@color/color_negro"
                    android:layout_margin="5dip"
                    android:gravity="right" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_negro"
                android:layout_margin="8dip"
                android:id="@+id/descripcion" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dip"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingredientes"
                android:textSize="15sp"
                android:textColor="@color/color_negro"
                android:textStyle="bold"
                android:layout_margin="5dip"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_negro"
                android:layout_margin="8dip"
                android:id="@+id/ingredientes" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dip"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cantidad"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/color_negro"
                android:layout_margin="5dip"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_action_arrow_left"
                    android:layout_weight="2"
                    android:id="@+id/imgBleft"
                    android:contentDescription="@string/informacion" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:text="@string/numero"
                    android:textColor="@color/color_negro"
                    android:background="@drawable/rounded_corner"
                    android:id="@+id/cantidad"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:contentDescription="@string/informacion"
                    android:src="@mipmap/ic_action_arrow_right"
                    android:id="@+id/imgBright" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dip"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio total"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/color_negro"
                android:layout_margin="5dip"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $12.000"
                android:layout_margin="8dip"
                android:textColor="@color/color_negro"
                android:id="@+id/preciodesc" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: $"
                    android:textStyle="bold"
                    android:textColor="@color/color_negro"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23333"
                    android:textStyle="bold"
                    android:layout_margin="8dip"
                    android:id="@+id/totalFinal"
                    android:textColor="@color/color_negro"
                    android:layout_gravity="right" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dip"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentario"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/color_negro"
                android:layout_margin="5dip"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/EditComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:background="@drawable/rounded_corner"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"
                    android:minWidth="10.0dip"
                    android:textColor="@color/color_negro"
                    android:maxWidth="180dip" />

            </LinearLayout>

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agregar"
            android:id="@+id/btnAdd"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>



</ScrollView>
